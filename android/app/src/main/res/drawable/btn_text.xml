<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
	    <shape>
			<gradient android:startColor="#0a6ab2" android:centerColor="#0960a1" android:endColor="#0a6ab2" android:angle="90"></gradient>
			<stroke android:width="1dp" android:color="#60000000"></stroke>
			<corners android:radius="5dip"/>
		</shape>
	</item>
	
	<item>
	    <shape>
			<gradient android:startColor="#0d77c7" android:centerColor="#0a6ab2" android:endColor="#0d77c7" android:angle="90"></gradient>
			<stroke android:width="1dp" android:color="#20000000"></stroke>
			<corners android:radius="5dip"/>
		</shape>
	</item>
</selector>