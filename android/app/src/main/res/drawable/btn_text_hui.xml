<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
	    <shape>
			<gradient android:startColor="#c1c1c1" android:centerColor="#b1b1b1" android:endColor="#c1c1c1" android:angle="90"></gradient>
			<stroke android:width="1dp" android:color="#60000000"></stroke>
			<corners android:radius="5dip"/>
		</shape>
	</item>
	
	<item>
	    <shape>
			<gradient android:startColor="#e1e1e1" android:centerColor="#c1c1c1" android:endColor="#e1e1e1" android:angle="90"></gradient>
			<stroke android:width="1dp" android:color="#20000000"></stroke>
			<corners android:radius="5dip"/>
		</shape>
	</item>
</selector>