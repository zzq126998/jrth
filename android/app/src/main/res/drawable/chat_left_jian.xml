<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item>
      <!-- 正三角 -->
      <rotate
          android:fromDegrees="45"
          android:toDegrees="45"
          android:pivotX="85%"
          android:pivotY="135%">
         <shape android:shape="rectangle">
            <solid android:color="@color/qipao_left"/>
            <stroke android:color="@color/qipao_left_border"  android:width="2px" />
         </shape>
      </rotate>
   </item>
</layer-list>