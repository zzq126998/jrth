			<solid android:color="@color/bgcolor" ></solid>
			<stroke android:color="@color/mcolors"  android:width="1px" />
		</shape>
	</item>
	
	<item>
	    <shape>
			<solid android:color="#ffffff" ></solid>
			<stroke android:color="#cccccc"  android:width="1px" />  
		</shape>
	</item>
