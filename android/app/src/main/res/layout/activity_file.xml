<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/bgcolor"
    >


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/headheight"
        android:background="@color/mcolor"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/headheight"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/headfontsize"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/back"
        android:layout_width="@dimen/headheight"
        android:layout_height="@dimen/headheight"
        android:background="@drawable/btn_tm"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_margin="14dp"

            android:src="@drawable/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/fileext"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/radius_fileext"
            android:text="jpg"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件名.jpg"
            android:textSize="16dp"
            android:gravity="center"
           />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/fileinfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送者：管理员，大小：10M\n时间：2017-03-23 12:00:00"
            android:textSize="14dp"
            android:textColor="#888888"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/filestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:textSize="16dp"
            android:textColor="#888888"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/filepath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:textSize="16dp"
            android:textColor="#888888"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>
