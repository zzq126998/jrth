<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/cogbtn"
        android:layout_below="@+id/pass"
        android:layout_width="@dimen/headheight"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/mcolor"
        android:textSize="16dp"
        android:gravity="center"
        android:text="设置" />


    <com.view.ImageViewXinhu
        android:id="@+id/face"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/icons"
        android:layout_centerHorizontal="true" />



    <EditText
        android:id="@+id/user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="16dp"
        android:singleLine="true"
        android:layout_below="@+id/face"
        android:hint="用户名/姓名/手机号"
        android:background="@drawable/input_login"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        android:text="" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="16dp"
        android:singleLine="true"
        android:layout_below="@+id/user"
        android:hint="密码"
        android:background="@drawable/input_login"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        android:text="" />

    <EditText
        android:id="@+id/mobile"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="16dp"
        android:singleLine="true"
        android:layout_below="@+id/face"
        android:hint="手机号"
        android:maxLength="11"
        android:background="@drawable/input_login"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        android:text="" />

    <EditText
        android:id="@+id/mobileyzm"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="16dp"
        android:maxLength="6"
        android:singleLine="true"
        android:layout_below="@+id/mobile"
        android:hint="手机验证码"
        android:background="@drawable/input_login"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        android:text="" />

    <Button
        android:id="@+id/btngyzm"
        android:visibility="gone"
        android:layout_below="@+id/mobile"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_zhu"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        android:text="获取" />

    <Button
        android:id="@+id/btn"
        android:layout_below="@+id/face"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_zhu"
        android:textColor="#ffffff"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20dp"
        android:text="登 录" />

    <TextView
        android:id="@+id/wjmmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mcolor"
        android:text="忘记密码？"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:layout_below="@+id/btn"/>

    <TextView
        android:id="@+id/yzmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mcolor"
        android:text="验证码登录"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:layout_below="@+id/btn"/>

    <TextView
        android:id="@+id/regbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mcolor"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        android:layout_below="@+id/btn"/>

    <TextView
        android:id="@+id/banquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#cccccc"
        android:gravity="center"
        android:text="Copyright ©2017 信呼 www.xh829.com"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/msg"
        style="@style/msgstyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="160dp"
        android:visibility="gone"
        android:layout_below="@+id/header"
        android:text="提示" />

</RelativeLayout>
