<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:layout_width="fill_parent"
    android:background="@color/white"

  android:layout_height="wrap_content">


  <RelativeLayout
      android:id="@+id/chatlist"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/chatborder"
      >

    <TextView
        android:id="@+id/xu"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

  <com.view.ImageViewXinhu
      android:id="@+id/icons"
      android:layout_centerVertical="true"
      android:layout_width="@dimen/facesize"
      android:layout_height="@dimen/facesize"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_alignParentTop="true"
      android:src="@drawable/noface" />


  


  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/titles"
      android:layout_marginTop="12dp"
      android:layout_alignParentTop="true"
      android:text="@string/app_name"
      android:textSize="18dp" />

  <TextView
      android:id="@+id/titles"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="40dp"
      android:layout_below="@+id/title"
      android:layout_toRightOf="@+id/icons"
      android:layout_toLeftOf="@+id/right"
      android:paddingBottom="5dp"
      android:textColor="#888888"
      android:singleLine="true"
      android:text="@string/app_name"
      android:textSize="14dp" />

  <TextView
      android:id="@+id/dt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginTop="12dp"
      android:textSize="12dp"
      android:textColor="#aaaaaa"
      android:layout_marginRight="10dp"
      android:text="15:40" />

  <TextView
      android:id="@+id/stotal"
      android:visibility="gone"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_alignParentRight="true"
      android:layout_marginTop="40dp"
      android:gravity="center"
      android:background="@drawable/radius"
      android:textColor="@color/white"
      android:textSize="10dp"
      android:padding="2dp"
      android:layout_marginRight="10dp"
      android:text="0" />



  <View
      android:layout_width="fill_parent"
      android:layout_height="1px"
      android:id="@+id/hang"
      android:layout_below="@+id/icons"
      android:layout_marginTop="10dp"
      android:background="@color/line2" />

  </RelativeLayout>
    
</RelativeLayout>